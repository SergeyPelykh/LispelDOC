            android:textSize="24dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/add_entity_field3_textView"
            app:layout_constraintEnd_toEndOf="@id/add_entity_field3_textView"
            app:layout_constraintStart_toStartOf="@+id/add_entity_field3_textView"
            app:layout_constraintTop_toTopOf="@+id/add_entity_field3_textView" />

        <TextView
            android:id="@+id/add_entity_field3_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:hint="адрес"
            android:paddingStart="4dp"
            android:paddingTop="9dp"
            android:textColor="#3C2929"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inscription_add_entity_field2_TextView" />

        <TextView
            android:id="@+id/inscription_add_entity_field3_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="адрес клиента"
            android:textColor="#3C2929"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_entity_field3_textView" />
        <EditText
            android:id="@+id/add_entity_field4_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:textColor="#3C2929"
            android:textSize="24dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/add_entity_field4_textView"
            app:layout_constraintEnd_toEndOf="@id/add_entity_field4_textView"
            app:layout_constraintStart_toStartOf="@+id/add_entity_field4_textView"
            app:layout_constraintTop_toTopOf="@+id/add_entity_field3_textView" />

        <TextView
            android:id="@+id/add_entity_field4_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:hint="8(999)999 99 99"
            android:paddingStart="4dp"
            android:paddingTop="9dp"
            android:textColor="#3C2929"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inscription_add_entity_field3_TextView" />

        <TextView
            android:id="@+id/inscription_add_entity_field4_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="телефон клиента"
            android:textColor="#3C2929"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_entity_field4_textView" />
        <EditText
            android:id="@+id/add_entity_field5_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:textColor="#3C2929"
            android:textSize="24dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/add_entity_field5_textView"
            app:layout_constraintEnd_toEndOf="@id/add_entity_field5_textView"
